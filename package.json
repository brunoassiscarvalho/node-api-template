{
  "name": "node-api-template",
  "version": "0.0.2",
  "description": "Api do Safe CV web",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "postbuild": "mkdir -p ./dist/src/api/email/views && cp -r ./src/api/email/views ./dist/src/api/email",
    "start": "node dist/src/index.js",
    "dev": "ts-node-dev --inspect=9227  -- src/index.ts",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:functional": "jest --projects ./test --runInBand",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brunoassiscarvalho/node-api-template.git"
  },
  "author": "Bruno Assis Carvalho Meyer",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/brunoassiscarvalho/node-api-template/issues"
  },
  "homepage": "https://github.com/brunoassiscarvalho/node-api-template#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase": "^9.8.1",
    "firebase-admin": "^10.2.0",
    "firebase-functions": "^3.21.2",
    "mongoose": "^5.11.12",
    "nodemailer": "^6.6.3",
    "nodemailer-express-handlebars": "^4.0.0",
    
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/express-serve-static-core": "^4.17.18",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.21",
    "@types/nodemailer": "^6.4.4",
    "@types/nodemailer-express-handlebars": "^4.0.1",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.18.0",
    "tslint": "^6.1.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.1",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  }
}
